<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" /> <!-- Background turns black when pressed -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Default background is white -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
